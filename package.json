{
  "name": "ms-base",
  "version": "3.0.0",
  "description": "This is an example microservice which can be used as code base for any Typescript microservice",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "start:dev": "ts-node-dev src/app.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "preversion": "npm run lint && npm run test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "Pablo Arag√≥n Moreno <pablo.aragon22@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paaragon/ms-base.git"
  },
  "bugs": {
    "url": "https://github.com/paaragon/ms-base/issues"
  },
  "homepage": "https://github.com/paaragon/ms-base#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "axios-better-stacktrace": "^2.1.2",
    "cli-table": "^0.3.11",
    "colors": "^1.4.0",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-http-context": "^1.2.4",
    "myfavouritelogger": "^1.4.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.8",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.6",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.0",
    "@types/colors": "^1.2.1",
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/jest": "^28.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5"
  }
}
